{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üõ† Debug Main Process",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "args": [
        "--inspect=9229",
        "."
      ],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "preLaunchTask": "npm: build"
    },
    {
      "name": "üîó Attach to Main (if already running)",
      "type": "pwa-node",
      "request": "attach",
      "port": 9229,
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    },
    {
      "name": "üåê Debug Renderer",
      "type": "pwa-chrome",
      "request": "attach",
      "port": 9222,                            // see note below
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true
    }
  ]
}
